<UserControl x:Class="FunnyWaterDelivery.App.Views.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FunnyWaterDelivery.App.Views"
             xmlns:viewModels="clr-namespace:FunnyWaterDelivery.App.ViewModels"
             xmlns:converters="clr-namespace:FunnyWaterDelivery.App.Views.Converters"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:EmployeesViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Bottom">
            <Button Command="{Binding AddEmployeeCommand}"
                    Margin="5">
                Добавить
            </Button>
            <Button Command="{Binding SaveChangesCommand}"
                    Margin="5">
                Сохранить
            </Button>
            <Button Command="{Binding DeleteEmployeeCommand}"
                    IsEnabled="{Binding SelectedEmployee, Converter={converters:NullToBoolConverter}}"
                    Margin="5">
                Удалить
            </Button>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Employees}"
                  SelectedItem="{Binding SelectedEmployee}"
                  SelectionMode="Single"
                  Margin="5"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding Id}"
                                    IsReadOnly="False"/>
                <DataGridTextColumn Header="Удалено"
                                    Binding="{Binding Deleted}"
                                    IsReadOnly="False"/>
                <DataGridTextColumn Header="Дата создания"
                                    Binding="{Binding CreateTime}"
                                    IsReadOnly="False"/>
                <DataGridTextColumn Header="Дата обновления"
                                    Binding="{Binding UpdateTime}"
                                    IsReadOnly="False"/>
                <DataGridTextColumn Header="Имя"
                                    Binding="{Binding Name}"
                                    IsReadOnly="False"/>
                <DataGridTextColumn Header="Фамилия"
                                    Binding="{Binding Surname}"
                                    IsReadOnly="False"/>
                <DataGridTextColumn Header="Отчество"
                                    Binding="{Binding Patronymic}"
                                    IsReadOnly="False"/>
                <DataGridTextColumn Header="Тип работника"
                                    Binding="{Binding EmployeeType, Converter={converters:EnumToStringConverter}}"
                                    IsReadOnly="False"/>
                <DataGridTemplateColumn Header="Тип работника">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Margin="5"
                                      ItemsSource="{Binding Employees}"
                                      SelectedItem="{Binding EmployeeType, Mode=TwoWay}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={converters:EnumToStringConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="День рождения"
                                    Binding="{Binding DateOfBirth}"
                                    IsReadOnly="False"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
